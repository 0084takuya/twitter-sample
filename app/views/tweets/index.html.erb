<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="left-col">
      </div>
    </div>
    <div class="col-6">
      <div class="center-col">
        <div class="title">ツイート</div>
        <% @tweets.each do |tweet| %>
          <div class="card" style="padding: 10px;margin: 5px;">
            <div class="nickname"><%= tweet.user.nickname %></div>
            <div class="content"><%= tweet.content %></div>
          </div>
        <% end %>

      </div>
    </div>
    <div class="col-3">
      <div class="right-col">
      </div>
    </div>
  </div>
</div>

<%= link_to 'ツイート', new_tweet_path, class: 'tweet-btn' %>
